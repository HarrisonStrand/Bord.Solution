@using BordClient.Models;

<h1>All Reviews:</h1>

<ol>
@foreach (Review review in Model)
{
  <ul>
    <li>Title: @review.Title</li>
    <li>Experience: @review.Experience</li>
    <li>Learning Curve: @review.LearningCurve</li>
    <li>Suggestion: @review.Suggestions</li>
    <li>Similar Games: @review.SimilarGames</li>
  </ul>
  <a href="/Reviews/Details/@(review.ReviewId)"><p>View Details</p></a>
  <br>
}
</ol>