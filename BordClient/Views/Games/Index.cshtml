@using BordClient.Models;


@{
    ViewData["Title"] = "Home Page";
}

@{
    Layout = "_Layout";
}
<div class="toplinks" style="text-align: center">
<a  href="/Reviews/Index">
    <p>Reviews</p>
</a>
<a  href="/Games/Index">
    <p>Games</p>
</a>
<a href="/Games/Create">
    <p>Create Game</p>
</a>
</div>
<h1 style="text-align: center">All Games:</h1>

<ul>
@foreach (Game game in Model)
{
    <div class="flip-box">
        <div class="flip-box-inner">
            <div class="flip-box-front">
            <h1>@game.GameName</h1>
            <h2>@game.Creators</h2>
            </div>
            <div class="flip-box-back">
            <h3>@game.GameName</h3>
            <br>
            <p>Players: @game.MinPlayers to @game.MaxPlayers</p>
            <p>Play Time: @game.PlayTimeMin minutes</p>
            @* <!-- Trigger/Open The Modal --> *@
            @* <button id="myBtn" asp-controller="Games" asp-action="AddReview">Write A Review</button> *@
            @Html.ActionLink("Write A Review", "AddReview", new {id = game.GameId} )
            </div>
        </div>
    </div>
    <br>
}
</ul>


<div class="card" id="searchcard" style="width: 200px; background-color: rgb(221,187,85); z-index: 10; position: fixed; left: 65px; top: 150px; height: auto;">
    <div class="cardheader">
        <h1> Filter by </h1>
    </div>
    <div class="cardbody" style="padding: 5px">
        <form asp-controller="Games" asp-action="Index" method="GET">
            
            <div class="genre">
            <h3 style="text-align: center;">Genre</h3>
            
            <input style="margin-left: 40px;" type="checkbox" id="horror" value="1">
            <label for="horror">Horror</label><br>
            <input style="margin-left: 40px;" type="checkbox" id="strategy" value="2">
            <label for="strategy">Strategy</label><br>
            <input style="margin-left: 40px;" type="checkbox" id="cooperative" value="3">
            <label for="cooperative">Cooperative</label><br>
            <input style="margin-left: 40px;" type="checkbox" id="mystery" value="4">
            <label for="mystery">Mystery</label><br>
            <input style="margin-left: 40px;" type="checkbox" id="comedy" value="4">
            <label for="comedy">Comedy</label><br>
            <input style="margin-left: 40px;" type="checkbox" id="puzzle" value="6">
            <label for="puzzle">Puzzle</label><br>
            <input style="margin-left: 40px;" type="checkbox" id="party" value="7">
            <label for="party">Party</label><br>
            <input style="margin-left: 40px;" type="checkbox" id="family" value="8">
            <label for="family">Family</label><br>
            </div>
            <div id="difficultyrating" style="text-align: center;">
                <h3>Rating</h3>
                <div class="difficulty">
                <input type="radio" name="LearningCurve" id="difficulty-5" value="5"> 
                <label for="difficulty-5"></label>
                <input type="radio" name="LearningCurve" id="difficulty-4" value="4"> 
                <label for="difficulty-4"></label>
                <input type="radio" name="LearningCurve" id="difficulty-3" value="3"> 
                <label for="difficulty-3"></label>
                <input type="radio" name="LearningCurve" id="difficulty-2" value="2"> 
                <label for="difficulty-2"></label>
                <input type="radio" name="LearningCurve" id="difficulty-1" value="1"> 
                <label for="difficulty-1"></label>
            </div>
            <br>
            <h3 style="text-align: center;">Maximum Players</h3>
            <input type="number" id="MaxPlayers" name="MaxPlayers">
            <h3 style="text-align: center;">Minimum Players</h3>
            <input type="number" id="MinPlayers" name="MinPlayers"> 

            <input style="margin: 5px;" type="submit" id="filtersubmit" value="save">
        </form>
    </div>
</div>
